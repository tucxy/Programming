{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++: g++ build active file",  // Name of the task
      "type": "shell",
      "command": "g++",  // Use g++ compiler
      "args": [
        "-g",  // Add debug symbols
        "${file}",  // Compile the currently open file
        "-o",  // Specify the output file
        "${fileDirname}\\${fileBasenameNoExtension}.exe"  // Save the output .exe in the same folder as the source file
      ],
      "group": {
        "kind": "build",
        "isDefault": true  // Set this as the default build task
      },
      "problemMatcher": ["$gcc"],
      "detail": "Generated task to build active C++ file"
    }
  ]
}
